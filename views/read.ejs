<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">back to home</a>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
    <div class="users flex gap-3 flex-wrap">
    <% if(users.length>0){ %>
        <% users.forEach((user)=>{ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 bg-zinc-700 rounded-lg">
                    <img class="w-full h-full object-centre overflow-hidden" src="<%= user.image%>" alt="">
                </div> 
            <h3 class="text-xl tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3 mt-10">
                <a class="text-zinc-600" href="/edit/<%= user._id%>">Edit User</a>
                <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
            </div>
        <% })  %>
   <% } else{ %>
        <h1>No Users </h1>
    <% } %> 
       
    </div>
    </div>
</body>
</html>